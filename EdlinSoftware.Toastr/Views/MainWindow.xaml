<Window x:Class="EdlinSoftware.Toastr.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:val="clr-namespace:EdlinSoftware.Toastr.Views.Support.Validation"
        Title="{Binding Source={StaticResource localResources}, Path=Title}" 
        Icon="/EdlinSoftware.Toastr;component/Images/App.png"
        WindowStartupLocation="CenterScreen"
        Height="206" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="{Binding Source={StaticResource localResources}, Path=ClickMe}" Click="OnShowMessage" Margin="20"/>
    </Grid>
</Window>
